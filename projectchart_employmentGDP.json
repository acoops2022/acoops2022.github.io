{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 200,
  "width": 300,
  "title": {
    "text": "Employment and GDP growth",
    "subtitle": [
      "Time series of the employment rate by age gorup and GDP growth during conservative party rule.",
      "[Red=35-49 year olds, Pink=16-24 year olds, Orange=16-65 year olds]- left axis",
      "[Green=GDP growth, Grey=16-65 employment growth rate]- right axis",
      "Source - ONS"
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/acoops2022/acoops2022.github.io/main/project_employment_GDPgrowth.csv"
  },
  "layer": [
    {"mark": "rule", "encoding": {"y": {"value": 100.5}}},
    {
      "mark": {"type": "bar", "size": 8, "color": "green"},
      "encoding": {
        "x": {"field": "Year", "type": "temporal", "title": "Year"},
        "y": {
          "field": "GDP growth",
          "type": "quantitative",
          "axis": {
            "title": "GDP & Employment growth (%)",
            "orient": "right",
            "titleColor": "#a5d8a2"
          },
          "scale": {"domain": [-15, 15]}
        },
        "tooltip": {
          "field": "GDP growth",
          "type": "quantitative",
          "title": "GDP growth rate"
        }
      }
    },
    {
      "mark": {"type": "line", "color": "pink", "opacity": 0.7},
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {
          "field": "16-24 employment",
          "type": "quantitative",
          "axis": {
            "title": "Employment rate (%)",
            "orient": "left",
            "titleColor": "#f56346"
          },
          "scale": {"domain": [-100, 100]}
        },
        "tooltip": {
          "field": "16-24 employment",
          "type": "quantitative",
          "title": "16-24 employment rate"
        }
      }
    },
    {
      "mark": {"type": "line", "color": "#fc9244", "opacity": 0.7},
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {
          "field": "16-65 employment",
          "type": "quantitative",
          "axis": {
            "title": "Employment rate (%)",
            "orient": "left",
            "titleColor": "#f56346"
          },
          "scale": {"domain": [-100, 100]}
        },
        "tooltip": {
          "field": "16-65 employment",
          "type": "quantitative",
          "title": "16-65 employment rate"
        }
      }
    },
    {
      "mark": {"type": "line", "color": "red", "opacity": 0.7},
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {
          "field": "35-49 employment",
          "type": "quantitative",
          "axis": {
            "title": "Employment rate (%)",
            "orient": "left",
            "titleColor": "#f56346"
          },
          "scale": {"domain": [-100, 100]}
        },
        "tooltip": {
          "field": "35-49 employment",
          "type": "quantitative",
          "title": "35-49 employment rate"
        }
      }
    },
    {
      "mark": {"type": "bar", "size": 8, "color": "gray"},
      "encoding": {
        "x": {"field": "Year", "type": "temporal", "title": "Year"},
        "y": {
          "field": "16-65 employment growth",
          "type": "quantitative",
          "axis": {
            "title": "GDP & Employment growth (%)",
            "orient": "right",
            "titleColor": "#557c53"
          },
          "scale": {"domain": [-15, 15]}
        },
        "tooltip": {
          "field": "16-65 employment growth",
          "type": "quantitative",
          "title": "16-65 employment growth rate"
        }
      }
    }
  ],
  "resolve": {"scale": {"y": "independent"}},
  "config": {}
}